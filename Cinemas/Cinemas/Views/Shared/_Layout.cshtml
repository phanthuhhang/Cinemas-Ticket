                                <li><a href="">Beta Hà Nội</a> <i class="fa-solid fa-angle-right"></i></li>
                                <li><a href="">Beta Hồ Chí Minh <i class="fa-solid fa-angle-right"></i></a></li>
                                <li><a href="">Beta Thái Nguyên <i class="fa-solid fa-angle-right"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="nav_contents">
                        <li><a asp-controller="Phim" asp-action="Index"> Trang chủ</a></li>
                        <li><a href="">Rạp</a></li>
                        <li><a href="">Tin tức và ưu đãi</a></li>
                        <li><a href="">Thành viên</a></li>
                    </div>
                </nav>
            </div>
        </header>

        @* main *@
        @RenderBody()

        <div class="footer_line">
        </div>

